<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_screen</item>
        </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorMain</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/drawer_toggle</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="toggleButton"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"/>
        <item name="android:textOff"/>
    </style>

    <style name="Toolbar.Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toolbar_drawer_toggle</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="toolbarToggleButton" parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Toolbar.Widget.Button.Toggle</item>
        <item name="android:textOn"/>
        <item name="android:textOff"/>
    </style>

    <style name="Comments.Widget.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
