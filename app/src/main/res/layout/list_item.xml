<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="cardView" type="com.example.bestofbehance.binding.CardBinding"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:background="@color/colorMain"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/bigImageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:layout_constrainedHeight="true"
                    tools:ignore="ContentDescription"
                    app:loadingRoundedImage="@{cardView.bigImage}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/constLayoutBottom"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:id="@+id/avatarView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="@+id/constLayoutBottom"
                    app:layout_constraintStart_toStartOf="@+id/constLayoutBottom"
                    tools:ignore="ContentDescription"
                    app:loadingCircleImage="@{cardView.avatar}"/>

            <TextView
                    android:id="@+id/artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardView.artistName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    tools:ignore="PrivateResource"
                    app:layout_constraintTop_toTopOf="@+id/constLayoutBottom"
                    app:layout_constraintStart_toEndOf="@id/avatarView"
                    app:layout_constraintBottom_toTopOf="@id/artName"/>
            <TextView
                    android:id="@+id/artName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardView.artName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/avatarView"
                    app:layout_constraintTop_toBottomOf="@+id/artistName"/>

            <View android:id="@+id/line"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="6dp"
                  android:background="@color/colorPrimary"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/artName"/>

            <ImageView
                    android:id="@+id/view_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_views"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/view_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardView.views}"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintStart_toEndOf="@+id/view_image"
                    app:layout_constraintEnd_toStartOf="@+id/appreciation_image"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                    android:id="@+id/appreciation_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_appreciation"
                    app:layout_constraintStart_toEndOf="@+id/view_text"
                    app:layout_constraintEnd_toStartOf="@+id/appreciation_text"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/appreciation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardView.appreciations}"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintStart_toEndOf="@+id/appreciation_image"
                    app:layout_constraintEnd_toStartOf="@+id/comments_image"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                    android:id="@+id/comments_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_comments"
                    app:layout_constraintStart_toEndOf="@+id/appreciation_text"
                    app:layout_constraintEnd_toStartOf="@+id/comments_text"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/comments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardView.comments}"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@+id/comments_image"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ToggleButton
                android:id="@+id/bookmark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|end"
                android:layout_alignParentTop="true"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


    </androidx.cardview.widget.CardView>

</layout >