<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".layout.DetailsFragment"
        android:background="@color/colorMain">

    <data>
        <variable name="cardViewDetails" type="com.example.bestofbehance.gson.CardBinding"/>
        <variable name="url" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/constLayoutImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recycler_view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarView1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/line1"
                    app:layout_constraintEnd_toStartOf="@+id/list_name1"/>

            <TextView
                    android:id="@+id/list_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardViewDetails.name}"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    tools:ignore="PrivateResource"
                    app:layout_constraintStart_toEndOf="@id/avatarView1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/list_post1"/>
            <TextView
                    android:id="@+id/list_post1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardViewDetails.post}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/list_name1"
                    app:layout_constraintBottom_toTopOf="@id/line1"
                    app:layout_constraintStart_toEndOf="@id/avatarView1"/>

            <View android:id="@+id/line1"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="6dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="16dp"
                  android:background="@color/colorPrimary"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/list_post1"/>

            <ImageView
                    android:id="@+id/view_image1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_views"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/view_text1"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/view_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardViewDetails.views}"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintStart_toEndOf="@id/view_image1"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/appreciation_image1"/>

            <ImageView
                    android:id="@+id/appreciation_image1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_appreciation"
                    app:layout_constraintStart_toEndOf="@id/view_text1"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/appreciation_text1"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/appreciation_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardViewDetails.appreciations}"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintStart_toEndOf="@id/appreciation_image1"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/comments_image1"
            />

            <ImageView
                    android:id="@+id/comments_image1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_comments"
                    app:layout_constraintStart_toEndOf="@id/appreciation_text1"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/comments_text1"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/comments_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardViewDetails.comments}"
                    android:textSize="14sp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toEndOf="@id/comments_image1"
                    app:layout_constraintTop_toBottomOf="@id/line1"
            />

            <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/comments"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/constLayoutImage"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>