<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="cardViewProfile" type="com.example.bestofbehance.binding.ProfileBinding"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap">

        <ImageView
                android:id="@+id/bigAvatar"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                tools:ignore="ContentDescription"
                app:loadingBigCircleImage="@{cardViewProfile.avatar}"
                app:loadingThumbnail="@{cardViewProfile.thumbnail}"/>

        <TextView
                android:id="@+id/nameProfile"
                android:textSize="16sp"
                android:text="@{cardViewProfile.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bigAvatar"
        />

        <TextView
                android:id="@+id/cityCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewProfile.cityCountry}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameProfile"
        />

        <ImageView
                android:id="@+id/view_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_views"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewProfile.views}"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cityCountry"
                app:layout_constraintStart_toEndOf="@+id/view_image"
                app:layout_constraintEnd_toStartOf="@+id/appreciation_image"
                app:layout_constraintHorizontal_bias="0"/>

        <ImageView
                android:id="@+id/appreciation_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_appreciation"
                app:layout_constraintStart_toEndOf="@+id/view_text"
                app:layout_constraintEnd_toStartOf="@+id/appreciation_text"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/appreciation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewProfile.appreciations}"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/appreciation_image"
                app:layout_constraintEnd_toStartOf="@+id/followers_image"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"/>

        <ImageView
                android:id="@+id/followers_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_followers"
                app:layout_constraintStart_toEndOf="@+id/appreciation_text"
                app:layout_constraintEnd_toStartOf="@+id/followers_text"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/followers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewProfile.followers}"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/followers_image"
                app:layout_constraintEnd_toStartOf="@+id/following_image"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"/>

        <ImageView
                android:id="@+id/following_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_following"
                app:layout_constraintStart_toEndOf="@+id/followers_text"
                app:layout_constraintEnd_toStartOf="@+id/following_text"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/following_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewProfile.following}"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/following_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cityCountry"/>

        <TextView
                android:id="@+id/about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@{cardViewProfile.aboutMe}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_image"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:textAlignment="center"
                android:clickable="true"
                android:layout_marginTop="8dp"
                android:focusable="true" />

        <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/more"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_me"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/postProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{cardViewProfile.post}"
                app:layout_constraintTop_toBottomOf="@id/more"/>

        <ImageView
                android:id="@+id/pinterest_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pinterest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/instagram_image"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/instagram_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_inst"
                app:layout_constraintStart_toEndOf="@id/pinterest_image"
                app:layout_constraintEnd_toStartOf="@+id/facebook_image"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/facebook_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_f"
                app:layout_constraintStart_toEndOf="@id/instagram_image"
                app:layout_constraintEnd_toStartOf="@+id/be_image"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/be_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_be"
                app:layout_constraintStart_toEndOf="@id/facebook_image"
                app:layout_constraintEnd_toStartOf="@+id/dribbble_image"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/dribbble_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dribbble"
                app:layout_constraintStart_toEndOf="@id/be_image"
                app:layout_constraintEnd_toStartOf="@+id/twitter_image"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/twitter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_tweet"
                app:layout_constraintStart_toEndOf="@id/dribbble_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>