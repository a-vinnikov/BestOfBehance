<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="commentsView" type="com.example.bestofbehance.binding.CommentsBinding"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/commentview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorMain">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/commentLayout"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commentAvatarView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/commentLine"
                    app:layout_constraintEnd_toStartOf="@id/comment_name"/>

            <TextView
                    android:id="@+id/comment_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{commentsView.commentsName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="12dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    tools:ignore="PrivateResource"
                    app:layout_constraintEnd_toStartOf="@id/date_text"
                    app:layout_constraintTop_toBottomOf="@+id/commentLine"
                    app:layout_constraintStart_toEndOf="@id/commentAvatarView"
            />
            <TextView
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{commentsView.comment}"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/commentAvatarView"
                    app:layout_constraintTop_toBottomOf="@+id/comment_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>

            <View android:id="@+id/commentLine"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="6dp"
                  android:background="@color/colorPrimary"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/commentAvatarView"/>


            <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/commentLine"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>